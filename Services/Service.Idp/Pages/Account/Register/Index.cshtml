@page
@model Service.Idp.Pages.Account.Register.IndexModel
@{
    ViewData["Title"] = "Register";
    var role_list = (List<string>?)ViewData["roles_message"];
}

<div >
    <partial name="_ValidationSummary"/>
    <div class="row">
        <div class="col-sm-12 col-lg-6 offset-lg-3">
            <div class="card">
                <div class="card-header">
                    <h2>Register</h2>
                </div>
                <div class="card-body">
                    <form method="post" asp-route="Register" >
                        <input type="hidden" asp-for="Input.ReturnUrl" />
                        <div class="form-group">
                            <label asp-for="Input.FirstName"></label>
                            <input class="form-control" placeholder="FirstName" asp-for="Input.FirstName" autofocus="" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.LastName"></label>
                            <input class="form-control" placeholder="LastName" asp-for="Input.LastName" autofocus="" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input class="form-control" type="email" placeholder="Email" asp-for="Input.Email" autofocus=""/>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Username"></label>
                            <input class="form-control" placeholder="Username" asp-for="Input.Username" autofocus="" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input class="form-control" type="password" placeholder="Password" asp-for="Input.Password" autofocus="" />
                        </div>

                        <button type="submit" class="btn btn-primary" name="button" value="register">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
